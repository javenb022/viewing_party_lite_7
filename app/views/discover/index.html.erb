<h1>Viewing Party</h1>
<h2>Discover Movies</h2>

<%= button_to 'Discover Top Rated Movies', movies_path, method: :get %>
<br><br>
<h3>Search Movies By Title</h3>
<%= form_with url: movies_path, method: :get, local: true do |f| %>
  <%= f.label :search_field, hidden: true %>
  <%= f.text_field :search_field %>
  <%= f.submit 'Search' %>
<% end %>